<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin_btm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/card_img_size"
            android:layout_height="@dimen/card_img_size"
            android:src="@drawable/catshoes"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/card_margin"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High top sneakers for cats lovers"
                android:textStyle="bold"
                android:textSize="@dimen/card_text_title"
                android:textColor="@color/owlnext_tiffany_green"
                android:layout_marginBottom="@dimen/card_text_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 45"
                android:textSize="@dimen/card_text"
                android:textColor="@color/owlnext_tiffany_green"
                android:layout_marginBottom="@dimen/card_text_margin"/>

            <TextView
                android:id="@+id/card1_text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item2_description"
                android:textSize="@dimen/card_text"
                android:textColor="@color/owlnext_tiffany_green" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>